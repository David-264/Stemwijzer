<Window x:Class="projectstemwijzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectstemwijzer"
        mc:Ignorable="d"
        Background="#352D27"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Top" >
            <TextBlock Background="#EAE6E3" Text="Dashboard" FontSize="30" FontWeight="Bold" Foreground="#2B2D42" Margin="0,0,0,20"/>
            <Button Name="politiekknop" Content="poletiekenpartijpagina" Height="50" FontSize="16" Background="#EAE6E3" Foreground="#2B2D42" BorderThickness="0" Click="politiekknop_Click" />
            <Button Name="standpuntknop" Content="standpuntenpagina" Height="50" FontSize="16" Background="#EAE6E3" Foreground="#2B2D42" BorderThickness="0" Click="standpuntknop_Click" />
            <Button Name="standpuntperpartijknop" Content="standpuntperpartijpagina" Height="50" FontSize="16" Background="#EAE6E3" Foreground="#2B2D42" BorderThickness="0" Click="standpuntperpartijknop_Click" />
            <Button Name="acountmaakknoo" Content="acount maken" Height="50" FontSize="16" Background="#EAE6E3" Foreground="#2B2D42" BorderThickness="0" Click="acountmaakknoo_Click" />
            <Button Name="beheerknop" Content="beheer beheer pagina" Height="50" FontSize="16" Background="#EAE6E3" Foreground="#2B2D42" BorderThickness="0" Click="beheerknop_Click" />
            <Button Name="resultaatknop" Content="resultaten" Height="50" FontSize="16" Background="#EAE6E3" Foreground="#2B2D42" BorderThickness="0" Click="resultaatknop_Click" />
        </StackPanel>

        <Border Grid.Column="1" Background="#EAE6E3" CornerRadius="10" Margin="20,0,0,0" BorderBrush="#ddd" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Laatste Nieuws" FontSize="24" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,20"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#444">
                        
                    </TextBlock>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</Window>
